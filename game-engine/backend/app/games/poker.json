{
  "id": "poker",
  "name": "Poker",
  "description": "Texas Hold'em poker with hole cards, community cards, and betting rounds.",
  "version": "1.0.0",
  "themeColor": "#047857",
  "backgroundEmoji": "\ud83c\udccf",
  "rules": {
    "minPlayers": 2,
    "maxPlayers": 10,
    "handSize": 2,
    "turnStructure": {
      "phases": [
        {
          "id": "bet",
          "name": "Betting",
          "description": "Check, bet, call, raise, or fold.",
          "isOptional": false
        }
      ],
      "canPassTurn": false,
      "mustPlayCard": false,
      "drawCount": 0
    },
    "winCondition": {
      "type": "most_points",
      "description": "Best 5-card poker hand using hole cards and community cards wins the pot.",
      "metadata": {
        "targetScore": 0
      }
    },
    "specialRules": [
      {
        "id": "blinds",
        "name": "Blinds",
        "trigger": "on_turn_start",
        "description": "Small and big blinds are posted before dealing."
      },
      {
        "id": "community_cards",
        "name": "Community Cards",
        "trigger": "on_play",
        "description": "Five community cards are dealt face-up: flop (3), turn (1), river (1)."
      },
      {
        "id": "best_hand",
        "name": "Best Hand",
        "trigger": "on_combo",
        "description": "Players make the best 5-card hand from 2 hole + 5 community cards."
      },
      {
        "id": "all_in",
        "name": "All-In",
        "trigger": "on_play",
        "description": "Players can bet all remaining chips. Side pots created if needed."
      }
    ]
  },
  "config": {
    "matchColor": false,
    "matchNumber": false,
    "matchType": false,
    "wildAlwaysPlayable": false,
    "stackableDraw": false,
    "reverseEqualsSkipTwoPlayers": false,
    "startWithDiscard": false,
    "excludeFromStartDiscard": [],
    "drawUntilPlayable": false,
    "colors": [
      "hearts",
      "diamonds",
      "clubs",
      "spades"
    ],
    "colorEmojis": {
      "hearts": "\u2665\ufe0f",
      "diamonds": "\u2666\ufe0f",
      "clubs": "\u2663\ufe0f",
      "spades": "\u2660\ufe0f"
    },
    "blinds": {
      "smallBlind": 10,
      "bigBlind": 20
    },
    "zones": [
      {
        "id": "deck",
        "name": "Deck",
        "type": "deck",
        "isPublic": false
      },
      {
        "id": "community",
        "name": "Community Cards",
        "type": "discard",
        "isPublic": true
      },
      {
        "id": "burn",
        "name": "Burn Pile",
        "type": "discard",
        "isPublic": false
      }
    ],
    "roundActions": [
      {
        "phase": "flop",
        "actions": [
          { "type": "burn_card" },
          { "type": "deal_to_zone", "zone": "community", "count": 3, "message": "The flop: {cards}" },
          { "type": "reset_bets" }
        ]
      },
      {
        "phase": "turn",
        "actions": [
          { "type": "burn_card" },
          { "type": "deal_to_zone", "zone": "community", "count": 1, "message": "The turn: {card}" },
          { "type": "reset_bets" }
        ]
      },
      {
        "phase": "river",
        "actions": [
          { "type": "burn_card" },
          { "type": "deal_to_zone", "zone": "community", "count": 1, "message": "The river: {card}" },
          { "type": "reset_bets" }
        ]
      },
      {
        "phase": "showdown",
        "actions": [
          { "type": "log", "message": "Showdown! Best hand wins the pot." },
          { "type": "end_round" }
        ]
      }
    ],
    "defaultActions": [
      {
        "id": "check",
        "label": "Check \u270b",
        "icon": "\u270b",
        "description": "Check (pass without betting)",
        "actionType": "check",
        "showCondition": {
          "type": "compound",
          "all": [
            { "type": "is_current_turn" },
            { "type": "metadata_equals", "key": "currentBet", "value": 0 }
          ]
        },
        "color": "gray",
        "inputType": "button"
      },
      {
        "id": "bet",
        "label": "Bet \ud83d\udcb0",
        "icon": "\ud83d\udcb0",
        "description": "Place a bet",
        "actionType": "bet",
        "showCondition": {
          "type": "compound",
          "all": [
            { "type": "is_current_turn" },
            { "type": "metadata_equals", "key": "currentBet", "value": 0 }
          ]
        },
        "color": "green",
        "inputType": "number",
        "inputConfig": {
          "min": 1,
          "metadataMax": "playerChips",
          "step": 1,
          "label": "Bet amount"
        }
      },
      {
        "id": "call",
        "label": "Call \ud83d\udcde",
        "icon": "\ud83d\udcde",
        "description": "Match the current bet",
        "actionType": "call",
        "showCondition": {
          "type": "compound",
          "all": [
            { "type": "is_current_turn" },
            { "type": "metadata_gt", "key": "currentBet", "value": 0 }
          ]
        },
        "color": "blue",
        "inputType": "button"
      },
      {
        "id": "raise",
        "label": "Raise \u2b06\ufe0f",
        "icon": "\u2b06\ufe0f",
        "description": "Raise the current bet",
        "actionType": "raise",
        "showCondition": {
          "type": "compound",
          "all": [
            { "type": "is_current_turn" },
            { "type": "metadata_gt", "key": "currentBet", "value": 0 }
          ]
        },
        "color": "yellow",
        "inputType": "number",
        "inputConfig": {
          "min": 1,
          "metadataMin": "currentBet",
          "metadataMax": "playerChips",
          "step": 1,
          "label": "Raise to"
        }
      },
      {
        "id": "fold",
        "label": "Fold \ud83d\uddc2\ufe0f",
        "icon": "\ud83d\uddc2\ufe0f",
        "description": "Fold your hand",
        "actionType": "fold",
        "showCondition": { "type": "is_current_turn" },
        "color": "red",
        "inputType": "button"
      },
      {
        "id": "all_in",
        "label": "All-In \ud83c\udfb2",
        "icon": "\ud83c\udfb2",
        "description": "Bet all your remaining chips",
        "actionType": "all_in",
        "showCondition": { "type": "is_current_turn" },
        "color": "red",
        "inputType": "button"
      }
    ]
  },
