{
  "id": "exploding_kittens",
  "name": "Exploding Kittens",
  "description": "A strategic party game about kittens and explosions and laser beams.",
  "version": "1.0.0",
  "themeColor": "#FF6B35",
  "backgroundEmoji": "\ud83d\udca5",
  "rules": {
    "minPlayers": 2,
    "maxPlayers": 5,
    "handSize": 7,
    "turnStructure": {
      "phases": [
        {
          "id": "play",
          "name": "Play Cards",
          "description": "Play any number of cards from your hand.",
          "isOptional": true
        },
        {
          "id": "draw",
          "name": "Draw a Card",
          "description": "Draw one card from the draw pile to end your turn.",
          "isOptional": false
        }
      ],
      "canPassTurn": false,
      "mustPlayCard": false,
      "drawCount": 1
    },
    "winCondition": {
      "type": "last_standing",
      "description": "Last player alive wins!"
    },
    "specialRules": [
      {
        "id": "defuse_placement",
        "name": "Defuse Card Placement",
        "trigger": "on_play",
        "description": "When you play a Defuse card, you must place the Exploding Kitten back into the draw pile at any position."
      },
      {
        "id": "combo_matching",
        "name": "Card Combos",
        "trigger": "on_play",
        "description": "Play matching pairs to steal random cards, or three-of-a-kind to steal from all players."
      },
      {
        "id": "nope_cancellation",
        "name": "Nope Cards",
        "trigger": "on_play",
        "description": "Nope cards can be played anytime to cancel any action, and can be Noped themselves."
      }
    ]
  },
  "config": {
    "matchColor": false,
    "matchNumber": false,
    "matchType": false,
    "wildAlwaysPlayable": false,
    "stackableDraw": false,
    "reverseEqualsSkipTwoPlayers": false,
    "startWithDiscard": false,
    "excludeFromStartDiscard": [],
    "drawUntilPlayable": false,
    "zones": [
      {
        "id": "draw_pile",
        "name": "Draw Pile",
