{
  "id": "uno",
  "name": "UNO",
  "description": "Be the first player to get rid of all your cards! Match by color or number, and don't forget to shout UNO when you're down to one card!",
  "version": "1.0.0",
  "themeColor": "#E8232A",
  "backgroundEmoji": "\ud83c\udfb4",
  "rules": {
    "minPlayers": 2,
    "maxPlayers": 10,
    "handSize": 7,
    "turnStructure": {
      "phases": [
        {
          "id": "play",
          "name": "Play a Card",
          "description": "Play a card that matches the top discard by color, number, or type. If you can't, draw one card.",
          "isOptional": false
        }
      ],
      "canPassTurn": false,
      "mustPlayCard": false,
      "drawCount": 1
    },
    "winCondition": {
      "type": "empty_hand",
      "description": "First player to play all their cards wins! Remember to call UNO when you have one card left.",
      "metadata": {
        "pointSystem": "winner scores points equal to cards left in other players' hands",
        "numberCardPoints": "face value",
        "actionCardPoints": 20,
        "wildCardPoints": 50
      }
    },
    "specialRules": [
      {
        "id": "color_match",
        "name": "Color Match",
        "trigger": "on_play",
        "description": "You must play a card that matches the current color, number, or action type \u2014 or play a Wild.",
        "metadata": {}
      },
      {
        "id": "uno_call",
        "name": "UNO Call",
        "trigger": "on_one_card",
        "description": "When you play down to one card, you must call UNO. If you forget and another player catches you before the next turn, you draw 2 penalty cards.",
        "metadata": {}
      },
      {
        "id": "draw_stack",
        "name": "Draw Stacking",
        "trigger": "on_draw",
        "description": "When a Draw 2 is played, the next player may stack another Draw 2 to pass it along. The player who cannot stack must draw the full accumulated total.",
        "metadata": {}
      },
      {
        "id": "reverse_two_players",
        "name": "Reverse = Skip (2 players)",
        "trigger": "on_play",
        "description": "In a 2-player game, a Reverse card acts like a Skip card.",
        "metadata": {}
      },
      {
        "id": "wild_draw_four_challenge",
        "name": "Wild Draw 4 Challenge",
        "trigger": "on_play",
        "description": "If you suspect a Wild Draw 4 was played illegally (the player had a matching color card), you can challenge it. If correct, the offender draws 4; if wrong, you draw 6.",
        "metadata": {}
      }
    ]
  },
  "config": {
    "showDeckCount": true,
    "showDiscardPile": true,
    "handVisible": false,
    "allowDrawStacking": true,
    "allowWildDraw4Challenge": true,
    "unoCallWindow": 3000,
    "colors": [
      "red",
      "yellow",
      "green",
      "blue"
    ],
    "colorEmojis": {
      "red": "\ud83d\udd34",
      "yellow": "\ud83d\udfe1",
      "green": "\ud83d\udfe2",
      "blue": "\ud83d\udd35",
      "wild": "\ud83c\udf08"
    },
    "cardColorMap": {
      "field": "color",
      "defaultBg": "#302840",
      "colors": {
        "red":    "#e74c3c",
        "yellow": "#f1c40f",
        "green":  "#2ecc71",
        "blue":   "#3498db",
        "wild":   "#9b59b6"
      }
    },
    "matchColor": true,
    "matchNumber": true,
    "matchType": true,
    "wildAlwaysPlayable": true,
    "stackableDraw": true,
    "reverseEqualsSkipTwoPlayers": true,
    "startWithDiscard": true,
    "excludeFromStartDiscard": [
      "wild",
      "wild_draw4"
    ],
    "drawUntilPlayable": false,
    "defaultActions": [
      {
        "id": "call_uno",
        "label": "UNO!",
        "icon": "üó£Ô∏è",
        "description": "Call UNO when you have 1 card left",
        "actionType": "call_uno",
        "showCondition": "self_has_one_card",
        "color": "yellow"
      },
      {
        "id": "catch_uno",
        "label": "Catch UNO",
        "icon": "üö®",
        "description": "Catch a player who forgot to call UNO",
        "actionType": "catch_uno",
        "showCondition": "opponent_has_one_card_no_call",
        "color": "red"
      }
    ]
  },
