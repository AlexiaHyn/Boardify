{
  "id": "flip_seven",
  "name": "Flip Seven",
  "description": "A card game where players try to collect seven unique numbers or score points without busting.",
  "version": "1.0.0",
  "themeColor": "#8B5CF6",
  "backgroundEmoji": "\ud83c\udfb2",
  "rules": {
    "minPlayers": 2,
    "maxPlayers": 6,
    "handSize": 1,
    "turnStructure": {
      "phases": [
        {
          "id": "decision",
          "name": "Hit or Stay",
          "description": "Choose to take another card or stay with your current hand.",
          "isOptional": false
        }
      ],
      "canPassTurn": false,
      "mustPlayCard": false,
      "drawCount": 0
    },
    "winCondition": {
      "type": "target_score",
      "description": "First player to reach 200 points wins!",
      "metadata": {
        "targetScore": 200
      }
    },
    "specialRules": [
      {
        "id": "bust_rule",
        "name": "Bust on Duplicate Numbers",
        "trigger": "on_draw",
        "description": "If you draw a number you already have, you bust and score 0 for the round."
      },
      {
        "id": "flip_seven_bonus",
        "name": "Flip Seven Bonus",
        "trigger": "on_draw",
        "description": "Getting exactly 7 unique numbers gives +15 bonus points and ends the round."
      },
      {
        "id": "modifier_stacking",
        "name": "Modifier Cards",
        "trigger": "on_draw",
        "description": "Modifier cards (+2, +4, +6, +8, +10, x2) are placed above number cards and applied during scoring."
      }
    ]
  },
  "config": {
    "matchColor": false,
    "matchNumber": false,
    "matchType": false,
    "wildAlwaysPlayable": false,
    "stackableDraw": false,
    "reverseEqualsSkipTwoPlayers": false,
    "startWithDiscard": false,
    "excludeFromStartDiscard": [],
    "drawUntilPlayable": false,
