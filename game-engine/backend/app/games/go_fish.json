{
  "id": "go_fish",
  "name": "Go Fish",
  "description": "Collect sets of four cards by asking other players for specific ranks.",
  "version": "1.0.0",
  "themeColor": "#0ea5e9",
  "backgroundEmoji": "\ud83d\udc20",
  "rules": {
    "minPlayers": 2,
    "maxPlayers": 6,
    "handSize": 7,
    "turnStructure": {
      "phases": [
        {
          "id": "ask",
          "name": "Ask for Cards",
          "description": "Ask another player for all cards of a specific rank.",
          "isOptional": false
        }
      ],
      "canPassTurn": false,
      "mustPlayCard": false,
      "drawCount": 1
    },
    "winCondition": {
      "type": "most_points",
      "description": "Player with the most books (sets of 4 matching ranks) wins when all books are collected.",
      "metadata": {
        "targetScore": 13
      }
    },
    "specialRules": [
      {
        "id": "book_collection",
        "name": "Book Collection",
        "trigger": "on_combo",
        "description": "When you collect all 4 cards of the same rank, immediately place them as a book."
      },
      {
        "id": "must_have_rank",
        "name": "Must Have Rank to Ask",
        "trigger": "on_play",
        "description": "You can only ask for ranks that you have at least one card of in your hand."
      },
      {
        "id": "go_fish",
        "name": "Go Fish",
        "trigger": "on_draw",
        "description": "If asked player has no cards of requested rank, you draw from the ocean."
      }
    ]
  },
